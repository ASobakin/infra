#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use Symfony\Component\Dotenv\Dotenv;

$loader = __DIR__ . '/../vendor/autoload.php';

if (!file_exists($loader)) {
    $loader = __DIR__ . '/../../../autoload.php';
}

if (!file_exists($loader)) {
    die(
        'You must set up the project dependencies, run the following commands:' . PHP_EOL .
        'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
}

$l = require $loader;

if (class_exists('AutoTune\Tuner')) {
    \AutoTune\Tuner::init($l);
}

$filename = __DIR__.'/../.env';
if (!file_exists($filename)) {
    $filename = '~/.infra';
}
if (file_exists($filename)) {
    $dotenv = new Dotenv();
    $dotenv->load($filename);
}


$application = new Application('Infra', '1.0.0');
$application->setCatchExceptions(true);
$application->add(new \Infra\Command\ConfigCommand());
$application->add(new \Infra\Command\FirewallShowCommand());
$application->add(new \Infra\Command\FirewallInstallCommand());
$application->add(new \Infra\Command\GroupShowCommand());
$application->add(new \Infra\Command\GroupExecCommand());
$application->add(new \Infra\Command\HostShowCommand());
$application->add(new \Infra\Command\DockerPsCommand());
$application->add(new \Infra\Command\DockerInspectCommand());
$application->add(new \Infra\Command\UserListCommand());
$application->add(new \Infra\Command\UserShowCommand());
$application->add(new \Infra\Command\UserGroupListCommand());
$application->add(new \Infra\Command\UserGroupShowCommand());
$application->run();
